output "instance_id" {
  description = "Unique identifier of the EC2 instance"
  value       = aws_instance.this.id
}

output "private_ip" {
  description = "Primary private IPv4 address"
  value       = aws_instance.this.private_ip
}

output "private_dns_name" {
  description = "Internal DNS hostname for the instance"
  value       = aws_instance.this.private_dns
}

output "availability_zone" {
  description = "Availability zone where the instance runs"
  value       = aws_instance.this.availability_zone
}

output "instance_profile_arn" {
  description = "IAM instance profile ARN attached to the instance"
  value       = aws_instance.this.iam_instance_profile
}

# Optional SSH key outputs if module is extended to create/generate key pairs
output "ssh_private_key" {
  description = "Base64-encoded PEM private key when generated by module"
  value       = null
}

output "ssh_public_key" {
  description = "OpenSSH public key when generated by module"
  value       = null
}


