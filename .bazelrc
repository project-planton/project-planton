# BuildBuddy remote cache: opt-in with --config=bb
build:bb --bes_results_url=https://project-planton.buildbuddy.io/invocation/
build:bb --bes_backend=grpcs://project-planton.buildbuddy.io
build:bb --remote_cache=grpcs://project-planton.buildbuddy.io
build:bb --remote_timeout=10m
build:bb --remote_download_minimal
build:bb --remote_cache_compression
build:bb --incompatible_strict_action_env
build:bb --noremote_upload_local_results

test:bb --bes_results_url=https://project-planton.buildbuddy.io/invocation/
test:bb --bes_backend=grpcs://project-planton.buildbuddy.io
test:bb --remote_cache=grpcs://project-planton.buildbuddy.io
test:bb --remote_timeout=10m
test:bb --remote_download_minimal
test:bb --remote_cache_compression
test:bb --incompatible_strict_action_env
test:bb --noremote_upload_local_results

run:bb --bes_results_url=https://project-planton.buildbuddy.io/invocation/
run:bb --bes_backend=grpcs://project-planton.buildbuddy.io
run:bb --remote_cache=grpcs://project-planton.buildbuddy.io
run:bb --remote_timeout=10m
run:bb --remote_download_minimal
run:bb --remote_cache_compression
run:bb --incompatible_strict_action_env
run:bb --noremote_upload_local_results

